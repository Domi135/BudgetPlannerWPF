<Window x:Class="BudgetPlannerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:BudgetPlannerWPF.Views"
        mc:Ignorable="d"
        Title="Budget Planner"
        Width="1024" Height="768"
        WindowStartupLocation="CenterScreen">

    <Grid>


        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <TextBlock Text="Budget Planner"
                       FontSize="26" FontWeight="Bold"
                       Margin="0 0 0 20"
                       Grid.ColumnSpan="2"/>

            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0 0 20 0">
                <TextBlock Text="Inkomster" FontSize="18" FontWeight="Bold" />
                <DataGrid ItemsSource="{Binding Incomes}"
                          SelectedItem="{Binding SelectedIncome}"
                          AutoGenerateColumns="False"
                          Height="250">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Titel" Binding="{Binding Title}" />
                        <DataGridTextColumn Header="Belopp" Binding="{Binding Amount}" />
                        <DataGridTextColumn Header="Typ" Binding="{Binding TransactionType}" />
                        <DataGridTextColumn Header="Kategori" Binding="{Binding Category}" />
                        <DataGridTextColumn Header="Datum" Binding="{Binding Date}" />
                    </DataGrid.Columns>

                </DataGrid>

                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Button Content="Lägg till inkomst" Command="{Binding AddIncomeCommand}" Style="{StaticResource PrimaryButton}" />
                    <Button Content="Ta bort inkomst" Command="{Binding DeleteIncomeCommand}" Style="{StaticResource DangerButton}" Margin="10 0 0 0"/>
                    <views:IncomeExpenseFormView/>
                </StackPanel>
            </StackPanel>


            <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Utgifter" FontSize="18" FontWeight="Bold" />
                <DataGrid ItemsSource="{Binding Expenses}"
                          SelectedItem="{Binding SelectedExpense}"
                          AutoGenerateColumns="False"
                          Height="250">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Titel" Binding="{Binding Title}" />
                        <DataGridTextColumn Header="Belopp" Binding="{Binding Amount}" />
                        <DataGridTextColumn Header="Typ" Binding="{Binding TransactionType}" />
                        <DataGridTextColumn Header="Kategori" Binding="{Binding Category}" />
                        <DataGridTextColumn Header="Datum" Binding="{Binding Date}" />
                    </DataGrid.Columns>

                </DataGrid>

                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Button Content="Lägg till utgift" Command="{Binding AddExpenseCommand}" Style="{StaticResource PrimaryButton}" />
                    <Button Content="Ta bort utgift" Command="{Binding DeleteExpenseCommand}" Style="{StaticResource DangerButton}" Margin="10 0 0 0"/>
                    <views:IncomeExpenseFormView/>
                </StackPanel>
            </StackPanel>


            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0 30 0 0">
                <TextBlock Text="Prognos (baseline)" FontSize="20" FontWeight="Bold" />
                <TextBlock Text="{Binding MonthlyIncome, StringFormat='Inkomster: {0:C}'}" FontSize="16" />
                <TextBlock Text="{Binding MonthlyExpenses, StringFormat='Utgifter: {0:C}'}" FontSize="16" />
                <TextBlock Text="{Binding MonthlyNet, StringFormat='Netto: {0:C}'}" FontSize="16" FontWeight="Bold" />
            </StackPanel>

            <Button Content="Uppdatera" Grid.Row="3" Grid.ColumnSpan="2"
                    Command="{Binding RefreshCommand}"
                    Margin="0 20 0 0"
                    Style="{StaticResource PrimaryButton}" />

        </Grid>


    </Grid>
</Window>
